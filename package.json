{
  "name": "palgo",

  "productName": "Palgo",

  "version": "1.0.0",

  "main": "main.js",

  "dependencies": {
    "bootstrap-material-design": "^0.5.10",
    "pretty-bytes": "^2.0.1",
    "shell": "^0.3.2",
    "electron": "latest",
    "electron-packager": "latest",
    "mocha": "latest",
    "mocha-junit-reporter": "latest",
    "spectron": "^3.5.0",
    "uuid": "3.0.1",
    "vis": "4.18.1",
    "webpack": "2.2.1",
    "babel-plugin-add-module-exports": "latest"
  },

  "scripts": {
    "start": "electron .",
    "test": "mocha",
    "build": "electron-packager . --out=dist --asar --overwrite --all",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Algorithm Animator\"",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=release-builds"
  },

  "author": {
    "name": "Andrei-Mihai Nicolae",
    "email": "a.mihai.nicolae@gmail.com",
    "url": "http://github.com/nclandrei"
  },

  "license": "MIT",

  "repository": {
    "type": "git",
    "url": "https://github.com/nclandrei/Palgo"
  }
}
